{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "jsx": "react",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitAny": true,
        "types": ["mocha", "pulpstatus",
                  /* FIXME: why do I need these?
                     Shouldn't they be found from the typeRoots automatically? */
                  "react-chartjs", "react-timeago"],
        "typeRoots" : ["node_modules/@types", "./pulpstatus/js-src/@types"]
    },
    "include": [
        "./pulpstatus/js-src/"
    ]
}